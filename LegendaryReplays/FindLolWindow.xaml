<Window x:Class="LegendaryReplays.FindLolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find League of Legends" Height="70" Width="600" ResizeMode="CanMinimize">
    <Grid Background="#FF95A5A6">
        <Grid x:Name="SettingsGrid" Height="30" MinWidth="300" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="FindLeagueButton" Content="find LoL" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Width="75" ToolTip="Find your existing League of Legends installation for the patcher to use on first-run, saving time and download." Click="FindLeagueButton_Click"/>
            <Label x:Name="LocationLabel"  HorizontalAlignment="Right" Margin="0,0,80,0" VerticalAlignment="Center" Foreground="#FFE4E4E4"/>
        </Grid>
    </Grid>
</Window>